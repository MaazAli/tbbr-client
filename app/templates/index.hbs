{{site-header}}

<div class="container fade-in">
  {{side-bar groups=model.groups friendships=model.friendships}}
  <article class="main-content">
    {{outlet}}
  </article>
</div>

<div class="flash-messages-container">
{{#each flashMessages.queue as |flash|}}
  {{#flash-message flash=flash as |component flash|}}
    <div class="flash-messages-item">
      <h6>{{component.flashType}}</h6>
      <p>{{flash.message}}</p>
      {{#if component.showProgressBar}}
        <div class="alert-progress">
          <div class="alert-progressBar" style="{{component.progressDuration}}"></div>
        </div>
      {{/if}}
    </div>
  {{/flash-message}}
{{/each}}
</div>
