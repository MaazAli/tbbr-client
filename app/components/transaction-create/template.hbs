<div class="transaction-content">
  <div class="transaction-type">
    <span class="{{if isBorrow "active"}}" {{action "changeType" "Borrow"}}>Borrow</span>
    <span class="{{if isLend "active"}}" {{action "changeType" "Lend"}}>Lend</span>
  </div>
  {{currency-input
    dollars=dollars
    cents=cents
  }}
  {{textarea type="text" value=memo maxlength="140" placeholder="Memo..." rows="1"}}
  <button class="btn" {{action "transactionCreate"}}>Create</button>
  <i class="fa fa-times close" {{action "close"}}></i>
</div>
