<div class="bar-content">
  <h3 class="side-headers">Groups</h3>
  <ul>
    {{#each groups as |group|}}
      <li>{{group-card group=group}}</li>
    {{else}}
      <h4 class="status-text text-uppercase">No Groups Found</h4>
    {{/each}}
  </ul>

  <h3 class="side-headers">Friends</h3>
  <ul>
    {{#each groups as |group|}}
      <li>{{group-card group=group}}</li>
    {{else}}
      <h4 class="status-text text-uppercase">No Friends Found</h4>
    {{/each}}
  </ul>
</div>

<div class="fixed-bottom">
  {{#if isCreatingGroup}}
    {{group-create cancelCreateAction="toggleCreatingGroup"}}
  {{else}}
    <button type="button" class="btn" {{action "toggleCreatingGroup"}}>Create Group</button>
  {{/if}}
</div>

{{#if isToggleable}}
<div class="toggle-handle" {{action "toggleSidebar"}}>
  {{#if isClosed}}
    <i class="fa fa-arrow-right"></i>
  {{else}}
    <i class="fa fa-arrow-left"></i>
  {{/if}}
</div>
{{/if}}
